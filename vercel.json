{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/client/dist/$1" }
  ],
  "ignoreCommand": "echo 'Ignoring server directory for frontend-only deployment'"
} 